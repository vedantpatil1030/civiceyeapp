# Database Configuration
# Local MongoDB (for development)
MONGODB_URI_LOCAL=mongodb://localhost:27017/civiceye_db
# MongoDB Atlas (cloud database - replace with your connection string)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/civiceye_db?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=civiceye_super_secret_jwt_key_2024_change_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Default Admin Configuration (for initial setup)
DEFAULT_ADMIN_EMAIL=admin@civiceye.com
DEFAULT_ADMIN_PASSWORD=admin123
